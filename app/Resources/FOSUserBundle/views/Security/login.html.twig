{% extends ":Layouts:layout_theme.html.twig" %}
{% block content %}
    <div class="col-lg-4 box-form">
        <div class="login-content">
            <form action="{{ path("fos_user_security_check") }}" method="POST" class="margin-bottom-0">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% if error %}
                    <!--{{ dump(error) }} -->
                    <div class="alert alert-danger">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        Información a  usuari@: <br>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <div class="form-group m-b-20">
                    <label for="inputEmail" class="sr-only">Email address</label>
                    <input type="text" class="form-control input-lg" placeholder="Nombre de Usuario" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>
                <div class="form-group m-b-20">
                    <label for="inputPassword" class="sr-only">Constraseña</label>
                    <input type="password" class="form-control input-lg" placeholder="Contraseña" id="password" name="_password" required="required" />
                </div>
                <!--
                <div class="checkbox m-b-20">
                    <label>
                        <input type="checkbox" value="remember-me"> Recordarme
                    </label>
                </div>
                -->
                <div class="m-b-20">
                    <a id="recuperar" href="{{ path('fos_user_resetting_request') }}">¿Olvidó su contraseña?</a>&nbsp &nbsp &nbsp<a id="intro0" class="btn btn-inverse" href="javascript:void(0);" onclick="javascript:startIntro(0);"><i class="fa fa-question-circle"></i></a>
                </div>
                <div class="login-buttons">
                    <button class="btn btn-lg btn-inverse btn-block" type="submit">Ingresar</button>
                </div>
            </form>

        </div>
    </div>
    <!-- end login -->
    </div>
    <!-- end page container -->
{% endblock %}
